<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/StartFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/casePreviewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/case_overview"
        app:layout_constraintBottom_toTopOf="@+id/caseAnalyticsButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/caseAnalyticsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/analytics"
        app:layout_constraintBottom_toTopOf="@+id/portfolioButton"
        app:layout_constraintTop_toBottomOf="@+id/casePreviewButton" />

    <Button
        android:id="@+id/portfolioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/portfolio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caseAnalyticsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>