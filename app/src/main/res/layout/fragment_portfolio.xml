<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Portfolio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frontPageBackground"
    tools:context=".presentation.view.fragments.portfolio.PortfolioFragment">

    <View
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/totalValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalValue"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:text="@string/portfolio_total_value"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/bottomLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLine" />

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/totalValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_home_screen_button"
        app:layout_constraintStart_toStartOf="@id/bottomLine"
        app:layout_constraintTop_toBottomOf="@id/bottomLine" />

    <Button
        android:id="@+id/portfolioButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_portfolio_button"
        app:layout_constraintStart_toStartOf="@id/homeButton"
        app:layout_constraintTop_toBottomOf="@id/homeButton" />

    <Button
        android:id="@+id/detailsButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_case_details_button"
        app:layout_constraintStart_toStartOf="@id/portfolioButton"
        app:layout_constraintTop_toBottomOf="@id/portfolioButton" />


    <View
        android:id="@+id/sideLine"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/bottomLine"
        app:layout_constraintBottom_toTopOf="@id/casePartLine"
        app:layout_constraintEnd_toEndOf="@id/detailsButton" />

    <View
        android:id="@+id/casePartLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="280dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
