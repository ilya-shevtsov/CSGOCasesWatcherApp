<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/listItemCaseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CaseName" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/listItemCaseImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        fresco:actualImageScaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@id/listItemLowestPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listItemCaseName"
        tools:background="@color/black" />


    <TextView
        android:id="@+id/listItemLowestPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@id/listItemVolume"
        app:layout_constraintStart_toEndOf="@id/listItemCaseImage"
        app:layout_constraintTop_toBottomOf="@+id/listItemCaseName"
        tools:text="@string/case_lowest_price" />

    <TextView
        android:id="@+id/listItemVolume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@id/listItemMedianPrice"
        app:layout_constraintStart_toEndOf="@id/listItemCaseImage"
        app:layout_constraintTop_toBottomOf="@+id/listItemLowestPrice"
        tools:text="@string/case_volume" />

    <TextView
        android:id="@+id/listItemMedianPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/listItemCaseImage"
        app:layout_constraintStart_toEndOf="@id/listItemCaseImage"
        app:layout_constraintTop_toBottomOf="@+id/listItemVolume"
        tools:text="@string/case_median_price" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/listItemCaseImage" />


</androidx.constraintlayout.widget.ConstraintLayout>