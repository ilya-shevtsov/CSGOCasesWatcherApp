<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.csgocaseswatcherapp.presentation.view.fragments.start.StartFragment"
        android:label="Main Menu"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_casePreviewFragment"
            app:destination="@id/casePreviewFragment" />
        <action
            android:id="@+id/action_startFragment_to_portfolioFragment"
            app:destination="@id/portfolioFragment" />
    </fragment>
    <fragment
        android:id="@+id/casePreviewFragment"
        android:name="com.example.csgocaseswatcherapp.presentation.view.fragments.casepreview.CasePreviewFragment"
        android:label="Case Preview"
        tools:layout="@layout/fragment_case_preview" >
        <action
            android:id="@+id/action_casePreviewFragment_to_startFragment"
            app:destination="@id/startFragment" />
        <action
            android:id="@+id/action_casePreviewFragment_to_caseDetailsFragment"
            app:destination="@id/caseDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/portfolioFragment"
        android:name="com.example.csgocaseswatcherapp.presentation.view.fragments.portfolio.PortfolioFragment"
        android:label="Portfolio"
        tools:layout="@layout/fragment_portfolio" >
        <action
            android:id="@+id/action_portfolioFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/caseDetailsFragment"
        android:name="com.example.csgocaseswatcherapp.presentation.view.fragments.casedetails.CaseDetailsFragment"
        android:label="Case Details"
        tools:layout="@layout/fragment_case_details" >
        <action
            android:id="@+id/action_caseDetailsFragment_to_casePreviewFragment"
            app:destination="@id/casePreviewFragment" />
        <argument
            android:name="currentCase"
            app:argType="com.example.csgocaseswatcherapp.presentation.model.CasePreviewItem" />
    </fragment>
</navigation>