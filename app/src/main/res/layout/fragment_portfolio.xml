<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Portfolio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/frontPageBackground"
    tools:context=".presentation.view.fragments.portfolio.PortfolioFragment">


    <TextView
        android:id="@+id/totalValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/portfolio_total_value"
        android:textColor="@color/black"
        android:textStyle="bold" />

   <View
       android:id="@+id/bottomLine"
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:background="@color/black"
       app:layout_constraintBottom_toBottomOf="@id/totalValue"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />
   <View
       android:id="@+id/topLine"
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:background="@color/black"
       app:layout_constraintBottom_toTopOf="@id/totalValue"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
